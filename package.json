{
  "name": "pantograph",
  "version": "1.0.0",
  "description": "A typed zipped structure editor.",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "esbuild": "^0.17.18",
    "purescript": "^0.15.8",
    "purs-backend-es": "^1.3.2",
    "spago": "^0.20.9"
  },
  "scripts": {
    "postinstall": "spago install",
    "clean": "rm -rf node_modules output .spago *.lock .cache",
    "build": "npx spago build --purs-args \"--codegen=sourcemaps,js\"",
    "build-prod": "spago -x spago.production.dhall build --purs-args \"-o output-prod -g sourcemaps --json-errors\"",
    "bundle": "npm run build-prod && purs-backend-es bundle-app --main Main --minify --no-build --to dist/index.js",
    "serve": "npm run build && esbuild index.js --sourcemap --bundle --outdir=dist --servedir=dist",
    "test": "npx spago test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeprinz/pantograph.git"
  },
  "keywords": [
    "programm-language",
    "type-theory"
  ],
  "author": "Jacob Prinz, Henry Blanchette",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jeprinz/pantograph/issues"
  },
  "homepage": "https://github.com/jeprinz/pantograph#readme"
}
